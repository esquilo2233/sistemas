generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Senator {
  id               Int              @id @default(autoincrement())
  caucus           String?
  current          Boolean?
  description      String?
  district         String?
  enddate          DateTime?
  leadership_title String?
  party            String?
  bioguideid       String?
  birthday         DateTime?
  cspanid          Int?
  firstname        String?
  gender           String?
  lastname         String?
  link             String?
  middlename       String?
  name             String?
  namemod          String?
  nickname         String?
  osid             String?
  sortname         String?
  twitterid        String?
  youtubeid        String?
  phone            String?
  role_type        String?
  senator_class    String?
  senator_rank     String?
  startdate        DateTime?
  state            String?
  title            String?
  title_long       String?
  website          String?
  created_by       String           @default("system")
  created_at       DateTime         @default(now())
  updated_at       DateTime         @default(now()) @updatedAt
  congressNumbers  CongressNumber[]
  extras           Extra[]
}

model CongressNumber {
  id              Int       @id @default(autoincrement())
  senatorId       Int
  congress_number Int
  created_by      String    @default("system")
  created_at      DateTime  @default(now())
  updated_at      DateTime  @default(now()) @updatedAt

  senator         Senator   @relation(fields: [senatorId], references: [id])
}

model Extra {
  id            Int       @id @default(autoincrement())
  senatorId     Int
  address       String?
  contact_form  String?
  office        String?
  rss_url       String?
  created_by    String    @default("system")
  created_at    DateTime  @default(now())
  updated_at    DateTime  @default(now()) @updatedAt

  senator       Senator   @relation(fields: [senatorId], references: [id])
}
